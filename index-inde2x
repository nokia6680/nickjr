  position: relative;

  /*Стилизация тултипов*/
  &::after {
    content: '';
    position: absolute;

    opacity: 0;
    visibility: hidden;

    top: 122px;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 0;
    border-bottom: 8px solid #ffffff;
    border-right: 8px solid transparent;
    border-left: 8px solid transparent;
  }

  &::before {
    position: absolute;

    content: attr(data-tooltip);
    opacity: 0;
    visibility: hidden;

    display: inline-flex;

    width: auto;
    padding: 0.5em 0.5em;
    min-height: 20px;
    background-color: #ffffff;
    border-radius: 10px;
    top: 130px;
    left: 50%;
    transform: translateX(-50%);

    text-align: center;
    align-items: center;
    justify-content: center;

    box-shadow: 1px 1px 1px 1px rgba(0, 0, 0, 0.2);
    -webkit-box-shadow: 1px 1px 1px 1px rgba(0, 0, 0, 0.2);
    -moz-box-shadow: 1px 1px 1px 1px rgba(0, 0, 0, 0.2);

    font: {
      family: $footer-font;
      size: 0.625em;
    }

    color: $text-black;
    text-transform: uppercase;
  }

  &:hover::before,
  &:hover::after {
    opacity: 1;
    visibility: visible;
    transition: .1s ease-in-out .1s;
    z-index: 999999;
  }
}

&__tooltip {
  position: absolute;
  display: block;
  bottom: -20px;
  width: 100%;
